
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.krepler.krepler_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "v.attack_time"
						}
					]
				},
				"attack": {
					"transitions": [
						{
							"default": "!v.attack_time"
						}
					],
					"on_entry": [
						"@s lumidep:add_attack_state"
					]
				}
			}
		},
		"controller.animation.krepler.suck_life": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"suck_life": "query.has_rider"
						}
					]
				},
				"suck_life": {
					"transitions": [
						{
							"default": "!query.has_rider"
						}
					],
					"on_entry": [
						"/tag @s add isRegeneratingHealth"
					],
					"on_exit": [
						"/tag @s remove isRegeneratingHealth"
					]
				}
			}
		},
		"controller.animation.krepler.suck_life_2_electric_boogaloo": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"default": "query.has_rider"
						}
					]
				},
				"owo_life_owo": {
					"transitions": [
						{
							"default": "!query.has_rider"
						}
					],
					"on_entry": [
						"/execute @e[c=1,r=2] ^0 ^3 ^2.5 effect @s wither 1 1 true"
					]
				}
			}
		}
	}
}